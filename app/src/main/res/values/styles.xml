<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InfoTitle">
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">@dimen/default_margin_small</item>
    </style>

    <style name="InfoDetail">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/default_margin_large</item>
    </style>
</resources>
